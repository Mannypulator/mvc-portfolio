<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" />

</head>
<body>
    <!-- NAV SECTION -->
    <div class="nav--first">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="logo--blue">Manny</a>
        <div class="nav--icon">
            <div class="bar1"></div>
            <div class="bar2"></div>
            <div class="bar3"></div>
        </div>
    </div>
    <div class="nav--second">
        <a href="#hero" class="logo--white">Manny</a>
        <div class="nav--second__content">
            <!-- first box -->
            <div class="nav--second__content--box">
                <h4 class="h-4">Web Profiles</h4>
                <div class="web--profiles">
                    <div class="web--profiles__box">
                        <a href="#"><img src="~/img/github.svg" alt="github"></a>
                        <a href="#"><img src="~/img/codepen.svg" alt="codepen"></a>
                        <a href="#"><img src="~/img/dribbble.svg" alt="dribbble"></a>
                    </div>
                    <div class="web--profiles__box">
                        <a href="#"><img src="~/img/linkedin.svg" alt="linkedin"></a>
                        <a href="#"><img src="~/img/twitter.svg" alt="twitter"></a>
                        <a href="#"><img src="~/img/instagram.svg" alt="instagram"></a>
                    </div>
                </div>
                <a class="resume-link" asp-area="" asp-controller="Home" asp-action="Resume">Resume 📙</a>
            </div>
            <!-- second box -->
            <div class="nav--second__content--box">
                <h4 class="h-4">Menu</h4>
                <ul class="nav__list">
                    <li class="nav__list--item"><a asp-area="" asp-controller="Home" asp-action="Index" class="nav__link">Home</a></li>
                    <li class="nav__list--item"><a asp-area ="" asp-controller="Home" asp-action="Projects" class="nav__link">Projects</a></li>
                    <li class="nav__list--item"><a asp-area="" asp-controller="Home" asp-action="Contact" class="nav__link">Contact Me</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <a href="#" class="logo--blue">Manny</a>
        <ul class="footer__list">
            <li class="footer__item">
                <a href="#" class="footer__link">github</a>
            </li>
            <li class="footer__item">
                <a href="#" class="footer__link">codepen</a>
            </li>
        </ul>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
